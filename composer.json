{
    "name": "dicr/yii2-http",
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "homepage": "https://gitlab.com/dicr/yii2-http",
    "description": "HTTP-утилиты для Yii2",
    "keywords": ["dicr", "yii2", "http"],

    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "https://dicr.org",
            "role": "developer"
        }
    ],

    "support": {
        "source": "https://gitlab.com/dicr/yii2-http.git"
    },

    "minimum-stability": "RC",
    "prefer-stable": true,

    "require": {
        "php": "~8.0",
        "ext-zlib": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-iconv": "*",

        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-httpclient": "~2.0",

        "dicr/yii2-helper": "~6.0",

        "simplehtmldom/simplehtmldom": "~2.0-RC2"
    },

    "autoload": {
        "psr-4": {
            "dicr\\http\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },

    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "~9.5"
    },

    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-helper.git"},
        {"type": "github", "url": "https://github.com/simplehtmldom/simplehtmldom.git"}
    ]
}
